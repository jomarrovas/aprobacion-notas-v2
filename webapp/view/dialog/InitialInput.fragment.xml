<core:FragmentDefinition    xmlns="sap.m"
                            xmlns:core="sap.ui.core"
                            xmlns:mvc="sap.ui.core.mvc"
                            xmlns:layout="sap.ui.layout"
                            xmlns:form="sap.ui.layout.form">
    <Dialog class="sapUiContentPadding sapUiSizeCompact"
            contentWidth="20%"
            title="Ingresar Datos">
        <content>
            <layout:VerticalLayout>
                <form:Form  id="idForm">
                    <form:formContainers>
                        <form:FormContainer>
                            <form:formElements>
                                <form:FormElement   id="idFormElement">
                                    <form:fields>
                                        <Input  placeholder="{i18n>phSociedad}"
                                                required="true"
                                                maxLength="4"/>
                                    </form:fields>
                                    <form:fields>
                                        <Input  placeholder="{i18n>phCodigoCliente}"
                                                required="true"
                                                maxLength="10"/>
                                    </form:fields>
                                </form:FormElement>
                            </form:formElements>
                        <form:title/>
                        </form:FormContainer>
                    </form:formContainers>
                    <form:layout>
                        <form:ResponsiveGridLayout  adjustLabelSpan="false"
                                                    columnsL="1"
                                                    labelSpanL="4"
                                                    columnsM="1"
                                                    labelSpanM="4"
                                                    labelSpanS="12"/>
                    </form:layout>
                </form:Form>
            </layout:VerticalLayout>
        </content>
        <beginButton>
            <Button text="{i18n>btnConfirm}"
                    press=".onConfirm"
                    type="Accept"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>