<mvc:View   displayBlock="true"
            xmlns="sap.m"
            xmlns:f="sap.f"
            xmlns:core="sap.ui.core"
            xmlns:mvc="sap.ui.core.mvc"
            xmlns:html="http://www.w3.org/1999/xhtml"
            controllerName="zalcsa.aprobacionnotas.controller.Main">

        <App    id="app">
            <pages>
                <Page showHeader="false"   id="page"
                        title="{i18n>title}">
                    <content>
                        <f:FlexibleColumnLayout	id="idFexibleColumnLayout"
                        backgroundDesign="Solid"
                        layout="{/Layout}"
                        restoreFocusOnBackNavigation="true"
                        stateChange=".onStateChanged">
                        </f:FlexibleColumnLayout>
                    </content>
                </Page>
            </pages>
        </App>

</mvc:View>
